@using SuperFitnes.Controllers
@using SuperFitnes.Features.DtoModels.User
@model EditUser

<h2>Log in</h2>
@using (Html.BeginForm(nameof(AccountController.CreateLogin), "Account", FormMethod.Post))
{

    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.IsnNode)

    @Html.ValidationMessageFor(m => m.IsnNode)

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, htmlAttributes: new { @class = "from-control" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
}